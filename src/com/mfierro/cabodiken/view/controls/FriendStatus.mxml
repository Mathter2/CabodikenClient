<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
		width="100%" 
		height="100"
		styleName="boxStyle"
		useHandCursor="false"
		buttonMode="true"
		mouseChildren="false">
		
	<mx:Script>
		<![CDATA[
			import com.mfierro.cabodiken.model.ModelLocator;
			import com.mfierro.cabodiken.vo.UserData;
			
			[Bindable]
			private var model:ModelLocator = ModelLocator.getInstance();
			[Bindable]
			public var friend:UserData;
			
			private function getOnlineText():String {
				if (friend.isOnline) {
					return "Online";
				} else {
					return "Offline";
				}
			}
			
			
		]]>
	</mx:Script>
	<mx:Style>
		@namespace mx "http://www.adobe.com/2006/mxml";
		.boxStyle {
			border-style: outset;
            background-color: gray;
		}
		.friendName {
			font-size: 12;
			font-weight:bold;
			text-align:center;
		}
	</mx:Style>
	
	<mx:Text id="friendName" text="{friend.name}" styleName="friendName" width="100%" />
	<mx:TextArea id="friendMessage" text="{friend.message}" height="100%" editable="false" backgroundAlpha="0" borderSkin="{null}" />
	<mx:Text id="isOnline" text="{getOnlineText()}" />
	
</mx:VBox>
